{
	"name": "markdown-exit-mermaid",
	"version": "2.1.0",
	"description": "A markdown-exit plugin for rendering Mermaid diagrams in a secure iframe with viewer controls",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"test": "bun ./test/test.ts",
		"build": "vite build && bun ./scripts/build-loader.ts"
	},
	"keywords": [
		"markdown-exit",
		"mermaid",
		"diagram",
		"plugin",
		"markdown"
	],
	"author": "GnixAij",
	"license": "MIT",
	"peerDependencies": {
		"markdown-exit": "^1.0.0-beta.6"
	},
	"devDependencies": {
		"@types/node": "^25.0.3",
		"esbuild": "^0.27.2",
		"typescript": "^5.9.3",
		"vite": "^7.3.0",
		"vite-plugin-dts": "^4.5.4",
		"vite-plugin-static-copy": "^3.1.4"
	}
}
